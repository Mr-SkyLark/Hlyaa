@model HLyaa.Models.SetPartModel
@{
    ViewBag.Title = "SetPartAndPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание события</h2>
<h3>Распределение задолжностей</h3>

@if (Model.DebtorDataItems.Count() != 0)
{
  using (Html.BeginForm("SetPartAndPrice", "Events", FormMethod.Post))
  {
    @Html.HiddenFor(model => model.EventId)
    <table>
      <tr>
        <th>Имя пользователя</th>
        <th>Часть</th>
        <th>Конкретная сумма</th>
      </tr>
      @for (int i = 0; i < Model.DebtorDataItems.Count(); ++i)
      {
        <tr>
          <td>
            @Html.DisplayFor(model => model.DebtorDataItems[i].Name)
            @Html.HiddenFor(model => model.DebtorDataItems[i].UserId)
            @Html.HiddenFor(model => model.DebtorDataItems[i].Name)
          </td>
          <td>
            @Html.TextBoxFor(model => model.DebtorDataItems[i].DebtPart, new { @type = "number" })

          </td>
          <td>
            @Html.TextBoxFor(model => model.DebtorDataItems[i].DebtSum, new { @type = "number" })
            @Html.ValidationMessageFor(model => model.DebtorDataItems[i].DebtPart)
            @Html.ValidationMessageFor(model => model.DebtorDataItems[i].DebtSum)
          </td>
        </tr>
      }
    </table>
    <br />
    <input type="submit" value="Далее" />
  }
}
